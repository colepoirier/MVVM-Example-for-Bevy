<UserControl x:Class="OblivionExample.MagicListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OblivionExample"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:IMagicListItemVM}"        
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid Width="360" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Image Source="{Binding Image}" Margin="6, 0, 6, 0" Width="16" Height="16" Grid.Column="0"/>
        <TextBlock Text="{Binding Name}"  Grid.Column="1" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding ManaCost}"  Grid.Column="3" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
